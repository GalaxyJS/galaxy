{
  "plugins": [
    "jasmine"
  ],
  "env": {
    "browser": true,
    "jasmine": true,
    "es6": true,
    "amd": true
  },
  "globals": {
    "Galaxy": true,
    "Scope": true,
    "module": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:jasmine/recommended"
  ],
  "overrides": [
    {
      "excludedFiles": "node_modules/**"
    }
  ],
  "rules": {
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-unused-vars": [
      "error",
      {
        "args": "none"
      }
    ],
    "no-console": [
      "error",
      {
        "allow": [
          "info",
          "warn",
          "error"
        ]
      }
    ],
    "no-var": "error"
  }
}
